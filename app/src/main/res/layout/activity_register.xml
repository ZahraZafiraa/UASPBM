<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F9FF"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/logo_ls"
            android:contentDescription="@string/logo_ls"
            android:scaleType="fitCenter" />

        <!-- Card View Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/box_white_rounded_border"
            android:padding="24dp"
            android:layout_marginTop="16dp"
            android:elevation="6dp">

            <!-- Judul -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Akun Baru"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp" />

            <!-- Nama -->
            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Nama Lengkap"
                android:paddingHorizontal="16dp"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:layout_marginBottom="12dp" />

            <!-- Email -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Email"
                android:paddingHorizontal="16dp"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:inputType="textEmailAddress"
                android:layout_marginBottom="12dp" />

            <!-- Kata Sandi -->
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Kata Sandi"
                android:paddingHorizontal="16dp"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginBottom="12dp" />

            <!-- Konfirmasi Kata Sandi -->
            <EditText
                android:id="@+id/etConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_edittext"
                android:hint="Konfirmasi Kata Sandi"
                android:paddingHorizontal="16dp"
                android:textColorHint="#999999"
                android:textColor="#000000"
                android:inputType="textPassword"
                android:layout_marginBottom="16dp" />

            <!-- Tombol Daftar -->
            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="DAFTAR"
                android:textStyle="bold"
                android:backgroundTint="#B9C6EC"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button" />

            <!-- Link Masuk -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sudah punya akun? Masuk di sini."
                android:textSize="12sp"
                android:textColor="#333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
